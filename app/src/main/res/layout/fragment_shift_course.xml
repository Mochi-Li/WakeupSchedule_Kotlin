<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.suda.yzune.wakeupschedule.schedule_settings.ShiftCourseFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="将第"
            android:textSize="12sp" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/wp_node"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/colorAccent"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShownCount="4"
            app:npv_TextColorNormal="?attr/colorOnBackground"
            app:npv_TextColorSelected="@color/colorAccent"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="14sp"
            app:npv_WrapSelectorWheel="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="节之后的课程全部往"
            android:textSize="12sp" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/wp_direction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/colorAccent"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShownCount="4"
            app:npv_TextColorNormal="?attr/colorOnBackground"
            app:npv_TextColorSelected="@color/colorAccent"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="14sp"
            app:npv_WrapSelectorWheel="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="移动"
            android:textSize="12sp" />

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/wp_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="@color/colorAccent"
            app:npv_RespondChangeOnDetached="false"
            app:npv_ShownCount="4"
            app:npv_TextColorNormal="?attr/colorOnBackground"
            app:npv_TextColorSelected="@color/colorAccent"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="14sp"
            app:npv_WrapSelectorWheel="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="节"
            android:textSize="12sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/DialogButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            style="@style/DialogButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>